<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textUnit"
        android:layout_width="148dp"
        android:layout_height="23dp"
        android:fontFamily="sans-serif"
        android:text="@string/textUnit"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSpeedDisplay"
        app:layout_constraintVertical_bias="0.466"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textSpeedDisplay"
        android:layout_width="345dp"
        android:layout_height="112dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="@string/textSpeedValue"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="96sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLongitude" />

    <TextView
        android:id="@+id/textLatitude"
        android:layout_width="344dp"
        android:layout_height="37dp"
        android:layout_marginTop="444dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLongitude"
        android:layout_width="344dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLatitude" />

</androidx.constraintlayout.widget.ConstraintLayout>